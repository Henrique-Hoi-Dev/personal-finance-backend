{
    "name": "henrique-store-users-api",
    "version": "1.0.0",
    "description": "Microserviço de Usuários - Henrique Store E-commerce",
    "main": "server.js",
    "scripts": {
            "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cross-env NODE_ENV=test jest --config jest.config.js --runInBand --detectOpenHandles --verbose",
    "test:integration": "cross-env NODE_ENV=test jest --config jest.config.js --testPathPattern=tests/integration --runInBand --detectOpenHandles --verbose",
        "test:integration-silent": "cross-env NODE_ENV=test jest --projects ./tests --runInBand --silent",
        "single-test": "cross-env NODE_ENV=test jest -t",
        "coverage": "npm run test -- --coverage --silent=false",
        "dev": "cross-env NODE_ENV=development nodemon server.js",
        "dev:debug": "cross-env NODE_ENV=development node --inspect-brk server.js",
        "start": "cross-env NODE_ENV=production node server.js",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint . --ext .js --fix",
        "style:check": "prettier --check \"**/*.js\"",
        "style:fix": "prettier --write \"**/*.js\"",
        "prepare": "npx husky install",
        "migrate": "sequelize db:migrate",
        "migrate:status": "sequelize db:migrate:status",
        "migrate:undo": "sequelize db:migrate:undo",
        "migrate:undo:all": "sequelize db:migrate:undo:all",
        "seed": "sequelize db:seed:all",
        "seed:undo": "sequelize db:seed:undo:all",
        "migration:generate": "sequelize migration:generate --name",
        "seed:generate": "sequelize seed:generate --name",
        "db:create": "sequelize db:create",
        "db:drop": "sequelize db:drop",
        "db:reset": "npm run db:drop && npm run db:create && npm run migrate"
    },
    "author": "Henrique Hoinacki",
    "license": "MIT",
    "engines": {
        "node": ">=18.20.0 <20 || >=20.12.1"
    },
    "dependencies": {
        "axios": "^1.11.0",
        "bcrypt": "^5.1.1",
        "body-parser": "^2.2.0",
        "camelcase-keys": "^7.0.2",
        "compression": "^1.8.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "csurf": "^1.11.0",
        "date-fns": "^4.1.0",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "express-session": "^1.18.1",
        "express-validation": "^4.1.1",
        "helmet": "^8.1.0",
        "hpp": "^0.2.3",
        "http-status": "^2.1.0",
        "i18n": "^0.15.1",
        "keycloak-connect": "^26.1.1",
        "lodash": "^4.17.21",
        "pg": "^8.11.3",
        "pino": "^9.6.0",
        "pino-http": "^10.4.0",
        "qrcode": "^1.5.4",
        "qs": "^6.14.0",
        "sequelize": "^6.37.1",
        "sequelize-cli": "^6.6.1",
        "speakeasy": "^2.0.0",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "eslint": "^9.25.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-cli": "^29.7.0",
        "nodemon": "^3.1.10",
        "prettier": "^3.5.3",
        "supertest": "^7.1.0"
    },
    "lint-staged": {
        "*.{js,json,md}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "jest": {
        "testEnvironment": "node"
    }
}
