NODE_ENV=development
PORT=8081

PORT_SERVER=3000
DB_HOST=localhost
DB_PORT=5433
DB_NAME=finance
DB_USER=postgres
DB_PASS=postgres
DB_DIALECT=postgres
DB_LOGGING=false

# Security configurations
ALLOWED_ORIGINS=http://localhost:3005,http://localhost:3001,https://yourdomain.com

# JWT Configuration
JWT_SECRET=key
JWT_EXPIRES_IN=1h

## Avatares de Usuário
# Caminho para armazenar avatares
# Para desenvolvimento local: use um caminho absoluto (ex: C:\\data\\media\\avatars no Windows)
# Para Docker: use /app/uploads/avatars (já configurado no docker-compose.yml)
AVATAR_UPLOAD_DIR=

# Tamanho máximo (MB)
AVATAR_MAX_SIZE_MB=5

# Base path público para servir os arquivos (opcional, default /average/avatars)
AVATAR_PUBLIC_BASE_PATH=/average/avatars

# Pluggy (Open Finance) Configuration
PLUGGY_CLIENT_ID=
PLUGGY_CLIENT_SECRET=
PLUGGY_BASE_URL=https://api.pluggy.ai
